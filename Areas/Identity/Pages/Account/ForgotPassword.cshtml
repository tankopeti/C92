@page
@model Cloud9._2.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "_Layout"; // Assuming a layout file exists
}

<h1>@ViewData["Title"]</h1>
<h4>Enter the email address associated with your account.</h4>
<hr />
<div class="row">
    <div class="col-md-6"> @* Increased column width slightly *@
        <form method="post">
            @* This form POSTs to OnPostAsync and redirects, no modal involved here *@
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3"> @* Using floating labels for modern look *@
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Send Reset Link</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}