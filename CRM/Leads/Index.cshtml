                    const filter = this.getAttribute('data-filter');
                    let searchTerm = '@Model.SearchTerm';
                    let pageSize = '@Model.PageSize';
                    let url = '/CRM/Leads?pageSize=' + pageSize;
                    if (filter !== 'all') {
                        url += '&searchTerm=' + encodeURIComponent(filter);
                    } else if (searchTerm) {
                        url += '&searchTerm=' + encodeURIComponent(searchTerm);
                    }
                    window.location.href = url;
                });
            });

            // Delete Modal Logic
            document.querySelectorAll('[data-bs-target^="#deleteLeadModal_"]').forEach(button => {
                button.addEventListener('click', function () {
                    const leadId = this.closest('.lead-card').getAttribute('data-lead-id');
