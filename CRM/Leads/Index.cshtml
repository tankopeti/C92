                            <table class="table table-sm">
                                <tbody>
                                    <tr>
                                        <th>Név</th>
                                        <td>@lead.FirstName @lead.LastName</td>
                                    </tr>
                                    <tr>
                                        <th>Email</th>
                                        <td>@lead.Email</td>
                                    </tr>
                                    <tr>
                                        <th>Telefonszám</th>
                                        <td>@lead.PhoneNumber</td>
                                    </tr>
                                    <tr>
                                        <th>Cég</th>
                                        <td>@lead.CompanyName</td>
                                    </tr>
                                    <tr>
                                        <th>Beosztás</th>
                                        <td>@lead.JobTitle</td>
                                    </tr>
                                    <tr>
                                        <th>Státusz</th>
                                        <td>@lead.Status</td>
                                    </tr>
                                    <tr>
                                        <th>Jegyzetek</th>
                                        <td>@lead.Notes</td>
                                    </tr>
                                    @if (lead.PartnerId.HasValue)
                                    {
                                        <tr>
                                            <th>Partner ID</th>
                                            <td>@lead.PartnerId</td>
