<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cloud9._2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/Cloud9._2.styles.css" asp-append-version="true" /> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/signalr.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" 1  rel="stylesheet">
<link rel="stylesheet" href="~/css/site.css" 2  asp-append-version="true" />
</head>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top shadow-sm custom-navbar">
        <div class="container-fluid">
            <div class="d-flex w-100">
                <div class="navbar-brand padding-top-8">Cloud9.2</div>
                <div class="p-2 d-flex center-links">
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle custom-btn" type="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            CRM
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/CRM/Partners/Index">Partnerek</a></li>
                            <li><a class="dropdown-item" href="/CRM/">Árajánlatok</a></li>
                            <li><a class="dropdown-item" href="/CRM/">Megrendelések</a></li>
                            <li><a class="dropdown-item" href="/CRM/">Ügyfélkapcsolat</a></li>
                            <li><a class="dropdown-item" href="/CRM/Contacts/Index">Kontaktok</a></li>
                            <li><button class="dropdown-item" type="button">Telephelyek</button></li>
                        </ul>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle custom-btn" type="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Logisztika
                        </button>
                        <ul class="dropdown-menu">
                            <li><button class="dropdown-item" type="button">Termékek</button></li>
                            <li><button class="dropdown-item" type="button">Another action</button></li>
                            <li><button class="dropdown-item" type="button">Something else here</button></li>
                        </ul>
                    </div>
                </div>
                <div class="p-2 ms-auto d-flex">
                    <div class="dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button"
                            id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="/Images/person-fill-gear.svg" alt="User settings"
                                style="width: 24px; height: 24px; filter: brightness(0) invert(1);">
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li>
                                @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                                {
                                    <button class="nav-link btn btn-link"
                                        onclick="location.href='@Url.Page("/Admin/Index")'">
                                        Admin
                                    </button>
                                }
                            </li>
                            <li>
                                <!-- User Settings Button (Opens Settings Modal) -->
                                <button class="nav-link btn btn-link" data-bs-toggle="modal"
                                    data-bs-target="#userSettingsModal">
                                    Beállítások
                                </button>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <button class="dropdown-item d-flex align-items-center" data-bs-toggle="modal"
                                    data-bs-target="#authModal">
                                    Kilépés
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>

<body>
    <!-- Include the modal partial views -->
    @await Html.PartialAsync("_AuthModal")
    @await Html.PartialAsync("_UserSettingsModal")

    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</body>
<style>
    body {
        overflow: hidden;
    }

    .nav-link {
        border-radius: 0.25rem;
        margin: 0.1rem 0;
    }

    .nav-link.active {
        background-color: rgba(13, 110, 253, 0.1);
    }

    .table th,
    .table td {
        padding: 0.5rem 0.75rem;
    }

    .gap-2 {
        gap: 0.5rem;
    }

    .dropdown-item.active {
        background-color: rgba(13, 110, 253, 0.1);
    }
</style>

@await RenderSectionAsync("Scripts", required: false)
</html>