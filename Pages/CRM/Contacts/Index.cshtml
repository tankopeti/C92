
@page
@using System.Security.Claims
@using Cloud9_2.Models
@using Microsoft.AspNetCore.Identity
@model Cloud9_2.Pages.CRM.Contacts.IndexModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Kontaktok";
}

@await Html.PartialAsync("_CRMSidebar")

<div class="right-content">
    <div class="page-header-fixed-top">
        <!-- Breadcrumb Navigation -->
        <div class="d-flex justify-content-between align-items-center mb-2">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-body-tertiary rounded-3 p-2 mb-0">
                    <li class="breadcrumb-item"><a href="../../">Főoldal</a></li>
                    <li class="breadcrumb-item"><a href="../">CRM Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Kontaktok</li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.TotalRecords kontakt@(Model.TotalRecords != 1 ? "ok" : "") (Page @Model.CurrentPage of @Model.TotalPages)</li>
                </ol>
            </nav>
        </div>

        <!-- Header with Buttons and Search -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="d-flex align-items-center gap-2">
                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#createContactModal">+ Új Kontakt</button>
            </div>
            <div class="d-flex align-items-center gap-2">
                <form method="get" asp-page="./Index" class="input-group input-group-sm" style="width: 250px;">
                    <input type="hidden" name="pageNumber" value="1" />
                    <input type="hidden" name="pageSize" value="@Model.PageSize" />
                    <input type="text" class="form-control" placeholder="Keresés kontaktokban..." id="searchInput" name="searchTerm" value="@Model.SearchTerm">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                    @if (!string.IsNullOrEmpty(Model.SearchTerm))
                    {
                        <a href="@Url.Page("./Index")" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-x"></i>
                        </a>
                    }
                </form>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-funnel me-1"></i>Szűrő
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="@Url.Page("./Index")">Minden Kontakt</a></li>
                        <li><a class="dropdown-item" href="@Url.Page("./Index", new { filter = "active" })">Aktív</a></li>
                        <li><a class="dropdown-item" href="@Url.Page("./Index", new { filter = "inactive" })">Inaktív</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Contacts Table -->
        <div class="table-responsive" style="max-height: 70vh; overflow-y: auto;">
            <table class="table table-striped table-hover">
                <thead class="sticky-top custom-thead">
                    <tr>
                        @foreach (var column in new[] { "Név", "Email", "Telefonszám", "Beosztás", "Státusz", "Létrehozva", "Frissítve" })
                        {
                            <th class="text-nowrap">@column</th>
                        }
                        <th class="text-nowrap">Műveletek</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Contacts.Any())
                    {
                        @foreach (var contact in Model.Contacts)
                        {
                            <tr>
                                <td class="text-nowrap">@(contact.FirstName ?? "") @(contact.LastName ?? "")</td>
                                <td class="text-nowrap"><i class="bi bi-envelope me-1"></i>@(contact.Email ?? "")</td>
                                <td><i class="bi bi-telephone me-1"></i>@(contact.PhoneNumber ?? "") @(contact.PhoneNumber2 != null ? "; " + contact.PhoneNumber2 : "")</td>
                                <td class="text-nowrap"><i class="bi bi-briefcase me-1"></i>@(contact.JobTitle ?? "")</td>
                                <td class="text-nowrap">
                                    @{
                                        var badgeClass = "badge bg-secondary";
                                        var statusName = contact.Status?.Name ?? "N/A";
                                        if (statusName == "Aktív") badgeClass = "badge bg-success";
                                        else if (statusName == "Inaktív") badgeClass = "badge bg-secondary";
                                    }
                                    <span class="@badgeClass">@statusName</span>
                                    @if (contact.PartnerId.HasValue)
                                    {
                                        <span class="badge bg-info ms-1" title="Hozzárendelve partnerhez">Partner</span>
                                    }
                                </td>
                                <td class="text-nowrap">@contact.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="text-nowrap">@(contact.UpdatedDate?.ToString("yyyy-MM-dd HH:mm") ?? "N/A")</td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button type="button" 
                                                class="btn btn-outline-info" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#viewContactModal"
                                                data-contact-id="@contact.ContactId"
                                                data-first-name="@(contact.FirstName ?? "")"
                                                data-last-name="@(contact.LastName ?? "")"
                                                data-email="@(contact.Email ?? "")"
                                                data-phone-number="@(contact.PhoneNumber ?? "")"
                                                data-phone-number2="@(contact.PhoneNumber2 ?? "")"
                                                data-job-title="@(contact.JobTitle ?? "")"
                                                data-comment="@(contact.Comment ?? "")"
                                                data-comment2="@(contact.Comment2 ?? "")"
                                                data-is-primary="@contact.IsPrimary"
                                                data-status-name="@(contact.Status?.Name ?? "N/A")"
                                                data-partner-name="@(contact.Partner?.Name ?? "Nincs hozzárendelve")"
                                                title="Részletek">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <div class="dropdown">
                                            <button class="btn btn-outline-secondary dropdown-toggle btn-sm" type="button"
                                                    id="actionsDropdown_@contact.ContactId"
                                                    data-bs-toggle="dropdown"
                                                    aria-expanded="false"
                                                    data-bs-toggle="tooltip"
                                                    data-bs-placement="top"
                                                    data-bs-title="További műveletek">
                                                <i class="bi bi-three-dots-vertical"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="actionsDropdown_@contact.ContactId">
                                                <li>
                                                    <a class="dropdown-item" href="#"
                                                       data-bs-toggle="modal"
                                                       data-bs-target="#editContactModal"
                                                       data-contact-id="@contact.ContactId"
                                                       data-first-name="@contact.FirstName"
                                                       data-last-name="@contact.LastName"
                                                       data-email="@contact.Email"
                                                       data-phone-number="@contact.PhoneNumber"
                                                       data-phone-number2="@contact.PhoneNumber2"
                                                       data-job-title="@contact.JobTitle"
                                                       data-comment="@contact.Comment"
                                                       data-comment2="@contact.Comment2"
                                                       data-is-primary="@contact.IsPrimary"
                                                       data-status-id="@contact.StatusId"
                                                       data-partner-id="@contact.PartnerId">
                                                        <i class="bi bi-pencil-square me-2"></i>Szerkesztés
                                                    </a>
                                                </li>
                                                @if (contact.PartnerId.HasValue)
                                                {
                                                    <li>
                                                        <a class="dropdown-item" asp-page="../Partners/Details" asp-route-id="@contact.PartnerId" target="_blank">
                                                            <i class="bi bi-people me-2"></i>Partner megtekintése
                                                        </a>
                                                    </li>
                                                }
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <a class="dropdown-item text-danger" href="#"
                                                       data-bs-toggle="modal"
                                                       data-bs-target="#deleteContactModal"
                                                       data-contact-id="@contact.ContactId"
                                                       data-contact-name="@(contact.FirstName ?? "") @(contact.LastName ?? "")">
                                                        <i class="bi bi-trash me-2"></i>Törlés
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center">
                                <div class="alert alert-warning" role="alert">
                                    @if (!string.IsNullOrEmpty(Model.SearchTerm))
                                    {
                                        @:Nincsenek kontaktok a következő keresésre: "@Model.SearchTerm".
                                    }
                                    else
                                    {
                                        @:Nincsenek kontaktok. <button type="button" class="btn btn-link alert-link p-0 align-baseline" data-bs-toggle="modal" data-bs-target="#createContactModal">Létrehozni az elsőt?</button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination Footer -->
        @await Html.PartialAsync("_PaginationFooter", new PaginationViewModel
        {
            CurrentPage = Model.CurrentPage,
            TotalPages = Model.TotalPages,
            PageSize = Model.PageSize,
            SearchTerm = Model.SearchTerm ?? string.Empty,
            PageRoute = "./Index",
            EntityName = "kontakt"
        })
    </div>
</div>

@await Html.PartialAsync("_Modals")

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/contact.js"></script>
}
