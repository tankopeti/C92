@model Cloud9_2.Pages.CRM.CustomerCommunication.IndexModel
@using Microsoft.AspNetCore.Mvc.Rendering
@using Cloud9_2.Models
@using Microsoft.AspNetCore.Authentication

<!-- ============================================================= -->
<!-- 1. ÚJ KOMMUNIKÁCIÓ MODAL -->
<!-- ============================================================= -->
<div class="modal fade" id="newCommunicationModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content shadow-lg border-0">
            <div class="modal-header py-2 bg-primary text-white">
                <h5 class="modal-title fs-5 fw-semibold">
                    <i class="bi bi-chat-square-text me-2"></i> Új kommunikáció hozzáadása
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Bezárás"></button>
            </div>

            <div class="modal-body py-4">
                <form id="communicationForm_new">
                    @Html.AntiForgeryToken()

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-medium">Típus <span class="text-danger">*</span></label>
                            <select class="form-select tom-select" name="CommunicationTypeId" data-selected-id="" data-selected-text="" required>
                                <option value="" disabled selected>-- Válasszon típust --</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-medium">Partner <span class="text-danger">*</span></label>
                            <select name="PartnerId" class="form-select tom-select" data-selected-id="" data-selected-text="" autocomplete="off" required>
                                <option value="" selected>-- Válasszon partnert --</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-medium">Telephely</label>
                            <select name="SiteId" class="form-select tom-select" data-selected-id="" data-selected-text="" autocomplete="off">
                                <option value="" selected>-- Válasszon telephelyet --</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-medium">Felelős <span class="text-danger">*</span></label>
                            <select name="ResponsibleContactId" class="form-select tom-select" data-selected-id="" data-selected-text="" autocomplete="off" required>
                                <option value="" disabled selected>-- Válasszon felelőst --</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-medium">Dátum <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" name="Date" value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-medium">Státusz <span class="text-danger">*</span></label>
                            <select class="form-select tom-select" name="StatusId" data-selected-id="" data-selected-text="" required>
                                <option value="" disabled selected>-- Válasszon státuszt --</option>
                            </select>
                        </div>
                    </div>

                    <div class="mt-4">
                        <label class="form-label fw-medium">Tárgy <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="Subject" maxlength="1000" required placeholder="Rövid, egyértelmű tárgy..." />
                    </div>

                    <div class="mt-4">
                        <label class="form-label fw-medium">Kezdeti hozzászólás</label>
                        <textarea class="form-control" name="InitialPost" rows="4" maxlength="2000" placeholder="Adja meg az első hozzászólást (opcionális)"></textarea>
                    </div>

                    <div class="mt-4">
                        <label class="form-label fw-medium">Tartalom</label>
                        <textarea class="form-control" name="Note" rows="6" maxlength="2000" placeholder="Részletes leírás"></textarea>
                    </div>

                    <div class="mt-4">
                        <label class="form-label fw-medium">Megjegyzések</label>
                        <textarea class="form-control" name="Metadata" rows="4" maxlength="1000"></textarea>
                    </div>
                </form>
            </div>

            <div class="modal-footer py-2">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i> Bezárás
                </button>
                <button type="button" class="btn btn-primary px-4 save-communication" data-communication-id="new">
                    <i class="bi bi-check2-circle me-1"></i> Mentés
                </button>
            </div>
        </div>
    </div>
</div>

<!-- ============================================================= -->
<!-- 2. SZERKESZTÉS MODALOK (minden kommunikációhoz) -->
<!-- ============================================================= -->
@foreach (var communication in Model.Communications)
{
    <div class="modal fade" id="editCommunicationModal_@communication.CustomerCommunicationId" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content shadow-lg border-0">
                <div class="modal-header py-2 bg-warning text-dark">
                    <h5 class="modal-title fs-5 fw-semibold">
                        <i class="bi bi-pencil-square me-2"></i> Kommunikáció szerkesztése
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Bezárás"></button>
                </div>

                <div class="modal-body py-4">
                    <form id="communicationForm_@communication.CustomerCommunicationId">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="CustomerCommunicationId" value="@communication.CustomerCommunicationId" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Típus <span class="text-danger">*</span></label>
                                <select class="form-select tom-select" name="CommunicationTypeId" data-selected-id="@communication.CommunicationTypeId" data-selected-text="@communication.CommunicationTypeName" required>
                                    <option value="" disabled selected>-- Válasszon típust --</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Partner <span class="text-danger">*</span></label>
                                <select class="form-select tom-select" name="PartnerId" data-selected-id="@communication.PartnerId" data-selected-text="@communication.PartnerName" required>
                                    <option value="" disabled selected>-- Válasszon partnert --</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Telephely</label>
                                <select class="form-select tom-select" name="SiteId" data-selected-id="@communication.SiteId" data-selected-text="@communication.SiteName">
                                    <option value="" selected>-- Válasszon telephelyet --</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Felelős <span class="text-danger">*</span></label>
                                <select class="form-select tom-select" name="ResponsibleContactId" 
                                        data-selected-id="@communication.CurrentResponsible?.ResponsibleId" 
                                        data-selected-text="@communication.CurrentResponsible?.ResponsibleName" required>
                                    <option value="" disabled selected>-- Válasszon felelőst --</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Dátum <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" name="Date" value="@communication.Date.ToString("yyyy-MM-dd")" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Státusz <span class="text-danger">*</span></label>
                                <select class="form-select tom-select" name="StatusId" data-selected-id="@communication.StatusId" data-selected-text="@communication.StatusName" required>
                                    <option value="" disabled selected>-- Válasszon státuszt --</option>
                                </select>
                            </div>
                        </div>

                        <div class="mt-4">
                            <label class="form-label fw-medium">Tárgy <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="Subject" value="@communication.Subject" maxlength="1000" required />
                        </div>

                        <div class="mt-4">
                            <label class="form-label fw-medium">Tartalom</label>
                            <textarea class="form-control" name="Note" rows="6" maxlength="2000">@communication.Note</textarea>
                        </div>

                        <div class="mt-4">
                            <label class="form-label fw-medium">Megjegyzések</label>
                            <textarea class="form-control" name="Metadata" rows="4" maxlength="1000">@communication.Metadata</textarea>
                        </div>
                    </form>
                </div>

                <div class="modal-footer py-2">
                    <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i> Bezárás
                    </button>
                    <button type="button" class="btn btn-primary px-4 save-communication" data-communication-id="@communication.CustomerCommunicationId">
                        <i class="bi bi-check2-circle me-1"></i> Mentés
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- ============================================================= -->
    <!-- 3. RÉSZLETEK MODALOK (minden kommunikációhoz) -->
    <!-- ============================================================= -->
    <div class="modal fade" id="viewCommunicationModal_@communication.CustomerCommunicationId" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content shadow-lg border-0">
                <div class="modal-header py-2 bg-info text-white">
                    <h5 class="modal-title fs-5 fw-semibold">
                        <i class="bi bi-eye me-2"></i> Kommunikáció részletei: @communication.Subject
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Bezárás"></button>
                </div>

                <div class="modal-body py-4">
                    <table class="table table-sm table-borderless">
                        <tbody>
                            <tr><th>ID</th><td>@communication.CustomerCommunicationId</td></tr>
                            <tr><th>Típus</th><td>@communication.CommunicationTypeName</td></tr>
                            <tr><th>Partner</th><td>@(communication.PartnerName ?? "Nincs megadva")</td></tr>
                            <tr><th>Telephely</th><td>@(communication.SiteName ?? "Nincs megadva")</td></tr>
                            <tr><th>Dátum</th><td>@communication.Date:ToString("yyyy-MM-dd")</td></tr>
                            <tr><th>Tárgy</th><td>@(string.IsNullOrEmpty(communication.Subject) ? "Nincs" : communication.Subject)</td></tr>
                            <tr><th>Tartalom</th><td>@(string.IsNullOrEmpty(communication.Note) ? "Nincs" : communication.Note)</td></tr>
                            <tr>
                                <th>Státusz</th>
                                <td>
                                    @{
                                        string displayName = Model.StatusDisplayNames.TryGetValue(communication.StatusName, out var name) ? name : communication.StatusName ?? "Ismeretlen";
                                    }
                                    <span class="@(communication.StatusName switch
                                    {
                                        "Nyitott" => "badge bg-primary",
                                        "Folyamatban" => "badge bg-warning",
                                        "Eskalálva" => "badge bg-danger",
                                        "Megoldva" => "badge bg-success",
                                        _ => "badge bg-secondary"
                                    })">@displayName</span>
                                </td>
                            </tr>
                            <tr><th>Felelős</th><td>@(communication.CurrentResponsible?.ResponsibleName ?? "Nincs")</td></tr>
                            <tr><th>Megjegyzések</th><td>@(string.IsNullOrEmpty(communication.Metadata) ? "Nincs" : communication.Metadata)</td></tr>
                            <tr><th>Csatolmány</th><td>@(string.IsNullOrEmpty(communication.AttachmentPath) ? "Nincs" : communication.AttachmentPath)</td></tr>
                        </tbody>
                    </table>

                    <hr class="my-5">

                    <h6 class="mb-3 text-primary fw-semibold">
                        <i class="bi bi-clock-history me-2"></i> Kommunikációs előzmények
                    </h6>
                    <div id="history_@communication.CustomerCommunicationId" class="history-container">
                        <p class="text-muted">Előzmények betöltése...</p>
                    </div>

                    <h6 class="mb-3 mt-4 text-primary fw-semibold">
                        <i class="bi bi-chat-square-dots me-2"></i> Új hozzászólás
                    </h6>
                    <form id="addPostForm_@communication.CustomerCommunicationId" class="mt-2">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <textarea class="form-control" name="Content" rows="3" placeholder="Írja ide a hozzászólást..." required></textarea>
                        </div>
                        <button type="button" class="btn btn-primary btn-sm add-post" data-communication-id="@communication.CustomerCommunicationId">
                            <i class="bi bi-send me-1"></i> Hozzászólás hozzáadása
                        </button>
                    </form>
                </div>

                <div class="modal-footer py-2">
                    <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i> Bezárás
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- ============================================================= -->
    <!-- 4. TÖRLÉS MODALOK (minden kommunikációhoz) -->
    <!-- ============================================================= -->
    <div class="modal fade" id="deleteCommunicationModal_@communication.CustomerCommunicationId" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow-lg border-0">
                <div class="modal-header py-2 bg-danger text-white">
                    <h5 class="modal-title fs-5 fw-semibold">
                        <i class="bi bi-trash me-2"></i> Kommunikáció törlése
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Bezárás"></button>
                </div>

                <div class="modal-body py-4">
                    <p>Biztosan törölni szeretné a következő kommunikációt?</p>
                    <p class="fw-bold mb-0">@communication.Subject</p>
                    <form id="deleteCommunicationForm_@communication.CustomerCommunicationId">
                        @Html.AntiForgeryToken()
                    </form>
                </div>

                <div class="modal-footer py-2">
                    <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i> Mégse
                    </button>
                    <button type="button" class="btn btn-danger px-4 confirm-delete-communication" data-communication-id="@communication.CustomerCommunicationId">
                        <i class="bi bi-trash me-1"></i> Törlés
                    </button>
                </div>
            </div>
        </div>
    </div>
}