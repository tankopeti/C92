            try {
                const errorObj = JSON.parse(error.message);
                errorMessage += ` ${Object.values(errorObj.errors || {}).flat().join(' ') || errorObj.error}`;
            } catch (e) {
                errorMessage += ` ${error.message}`;
            }
            showAlert(errorMessage, 'danger');
