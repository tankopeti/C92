    @section Scripts {
        <script src="/js/Sites.js"></script>
        <script src="/js/utils.js"></script>
        <script src="/js/tomSelectUtils.js"></script>
        <script>
$(function () {
    $('[data-bs-toggle="tooltip"]').tooltip();

    // Create dictionaries for SiteId to PartnerId mappings (status map not needed for native select)
    const sitePartnerMap = @Json.Serialize(Model.Sites.ToDictionary(s => s.SiteId, s => s.PartnerId));
    console.log('sitePartnerMap:', sitePartnerMap);

    // Initialize TomSelect for create modal partner select only
    window.c92.initializePartnerTomSelect(
        document.querySelector('#create-partner-select'),
        'createSiteModal',
        'site-create',
        null
    ).then(tomSelect => {
        console.log('Create partner select initialized');
    }).catch(err => {
        console.error('Failed to initialize create partner select:', err);
        document.querySelector('#create-partner-select').innerHTML = '<option value="" disabled selected>Nincs elérhető partner</option>';
    });

    // Initialize TomSelect for edit modal partner selects only
    $('.modal').on('shown.bs.modal', function (e) {
        const modal = $(this);
        const partnerSelect = modal.find('select[name="partnerId"]');

        // Initialize Partner TomSelect
        if (partnerSelect.length && partnerSelect.attr('id').startsWith('edit-partner-select-')) {
            const siteId = parseInt(partnerSelect.attr('id').replace('edit-partner-select-', ''), 10);
            const preselectedPartnerId = sitePartnerMap[siteId] || null;
            const preselectedPartnerName = partnerSelect.find('option[selected]').text() || `Partner ${preselectedPartnerId}`;
            console.log(`Modal shown for SiteId: ${siteId}, PreselectedPartnerId: ${preselectedPartnerId}, PreselectedPartnerName: ${preselectedPartnerName}`);

            if (partnerSelect[0].tomselect) {
                partnerSelect[0].tomselect.destroy();
                console.log(`Destroyed existing Partner TomSelect for SiteId: ${siteId}`);
            }

            setTimeout(() => {
                window.c92.initializePartnerTomSelect(
                    partnerSelect[0],
                    `editSiteModal_${siteId}`,
                    'site-edit',
                    preselectedPartnerId
                ).then(tomSelect => {
                    console.log(`Edit partner select initialized for SiteId: ${siteId}`);
                    if (preselectedPartnerId) {
                        tomSelect.addOption({ id: preselectedPartnerId, text: preselectedPartnerName });
                        tomSelect.setValue(preselectedPartnerId, true);
                        tomSelect.refreshOptions(false);
                        console.log(`Set partner value ${preselectedPartnerId} for SiteId: ${siteId}`);
                    }
                }).catch(err => {
                    console.error(`Failed to initialize edit partner select for SiteId: ${siteId}`, err);
                    partnerSelect.html(`<option value="${preselectedPartnerId}" selected>${preselectedPartnerName}</option>`);
                });
            }, 100);
        }

        // No TomSelect for status selects; ensure they remain native
        const statusSelect = modal.find('select[name="statusId"]');
        if (statusSelect.length && statusSelect.attr('id').startsWith('edit-status-select-')) {
            const siteId = parseInt(statusSelect.attr('id').replace('edit-status-select-', ''), 10);
            console.log(`Native status select for SiteId: ${siteId}`);
            // Ensure no TomSelect instance exists
            if (statusSelect[0].tomselect) {
                statusSelect[0].tomselect.destroy();
                console.log(`Destroyed stray TomSelect on status select for SiteId: ${siteId}`);
            }
        }
    });

    // Form validation for modals
    document.querySelectorAll('.modal form').forEach(form => {
        form.addEventListener('submit', function (event) {
            if (!this.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }
            this.classList.add('was-validated');
        }, false);
    });

    // Search form handling
    document.addEventListener('DOMContentLoaded', function () {
        const searchForm = document.querySelector('form[method="get"]');
        if (searchForm) {
            searchForm.addEventListener('submit', function (e) {
                const searchInput = document.getElementById('searchInput');
                if (searchInput.value.trim() === '') {
                    e.preventDefault();
                    window.location.href = window.location.pathname;
                }
            });
        }

        document.querySelectorAll('[data-filter]').forEach(item => {
            item.addEventListener('click', function (e) {
                e.preventDefault();
                const filter = this.getAttribute('data-filter');
                console.log('Filter by:', filter);
                // Add actual filter logic here if needed
            });
        });
    });

    // Debug clicks on status selects to ensure native behavior
    $('select[id="create-status-select"], select[id^="edit-status-select-"]').on('click', function (e) {
        console.log('Native status select clicked:', this.id);
    });
});
        </script>
    }
