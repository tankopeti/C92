@page
@model Cloud9_2.Pages.GroupRemote.ResourceTypesModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Resource Types";
}

@await Html.PartialAsync("_GroupRemoteSidebar")

<!-- Main Content -->
<div class="right-content">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Page Header -->
    <div class="page-header-fixed-top">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-body-tertiary rounded-3 p-2 mb-0">
                    <li class="breadcrumb-item"><a href="../../../">FÅ‘oldal</a></li>
                    <li class="breadcrumb-item"><a href="../">Group Remote</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Resource Types</li>
                </ol>
            </nav>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createResourceTypeModal">
                <i class="bi bi-plus-circle me-1"></i> New Resource Type
            </button>
        </div>
    </div>

    <!-- Resource Types Table -->
    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Created Date</th>
                        <th>Is Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var resourceType in Model.ResourceTypes)
                    {
                        <tr>
                            <td>@resourceType.Name</td>
                            <td>@(resourceType.Description ?? "-")</td>
                            <td>@(resourceType.CreatedDate?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                            <td>@(resourceType.IsActive.HasValue ? (resourceType.IsActive.Value ? "Yes" : "No") : "-")</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editResourceTypeModal_@resourceType.ResourceTypeId">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <form asp-page-handler="Delete" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this resource type?');">
                                    <input type="hidden" name="id" value="@resourceType.ResourceTypeId" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Create Resource Type Modal -->
    <div class="modal fade" id="createResourceTypeModal" tabindex="-1" aria-labelledby="createResourceTypeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createResourceTypeModalLabel">Create New Resource Type</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-page-handler="Create" method="post">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label asp-for="ResourceType.Name" class="form-label">Name</label>
                            <input asp-for="ResourceType.Name" class="form-control" required maxlength="100" data-val="true" data-val-required="Name is required" data-val-maxlength="Name cannot exceed 100 characters" data-val-maxlength-max="100" />
                            <span asp-validation-for="ResourceType.Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ResourceType.Description" class="form-label">Description</label>
                            <textarea asp-for="ResourceType.Description" class="form-control"></textarea>
                            <span asp-validation-for="ResourceType.Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Active</label>
                            <input type="checkbox" name="ResourceType.IsActive" class="form-check-input" @(Model.ResourceType?.IsActive ?? true ? "checked" : "") value="true" />
                            <input type="hidden" name="ResourceType.IsActive" value="false" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Resource Type Modals -->
    @foreach (var resourceType in Model.ResourceTypes)
    {
        <div class="modal fade" id="editResourceTypeModal_@resourceType.ResourceTypeId" tabindex="-1" aria-labelledby="editResourceTypeModalLabel_@resourceType.ResourceTypeId" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editResourceTypeModalLabel_@resourceType.ResourceTypeId">Edit Resource Type</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form asp-page-handler="Update" method="post">
                        <input type="hidden" asp-for="ResourceType.ResourceTypeId" value="@resourceType.ResourceTypeId" />
                        <div class="modal-body">
                            <div class="mb-3">
                                <label asp-for="ResourceType.Name" class="form-label">Name</label>
                                <input asp-for="ResourceType.Name" class="form-control" value="@resourceType.Name" required maxlength="100" data-val="true" data-val-required="Name is required" data-val-maxlength="Name cannot exceed 100 characters" data-val-maxlength-max="100" />
                                <span asp-validation-for="ResourceType.Name" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ResourceType.Description" class="form-label">Description</label>
                                <textarea asp-for="ResourceType.Description" class="form-control">@resourceType.Description</textarea>
                                <span asp-validation-for="ResourceType.Description" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Active</label>
                                <input type="checkbox" name="ResourceType.IsActive" class="form-check-input" @(resourceType.IsActive ?? false ? "checked" : "") value="true" />
                                <input type="hidden" name="ResourceType.IsActive" value="false" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}