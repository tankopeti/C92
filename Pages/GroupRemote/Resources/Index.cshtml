@page
@model Cloud9_2.Pages.GroupRemote.ResourcesModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Resources";
}

@await Html.PartialAsync("_GroupRemoteSidebar")

<!-- Main Content -->
<div class="right-content">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Page Header -->
    <div class="page-header-fixed-top">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-body-tertiary rounded-3 p-2 mb-0">
                    <li class="breadcrumb-item"><a href="../../../">FÅ‘oldal</a></li>
                    <li class="breadcrumb-item"><a href="../">Group Remote</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Resources</li>
                </ol>
            </nav>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createResourceModal">
                <i class="bi bi-plus-circle me-1"></i> New Resource
            </button>
        </div>
    </div>

    <!-- Resources Table -->
    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Resource Type</th>
                        <th>Resource Status</th>
                        <th>Serial</th>
                        <th>Next Service</th>
                        <th>Date of Purchase</th>
                        <th>Warranty Period</th>
                        <th>Warranty Expire Date</th>
                        <th>Service Date</th>
                        <th>Who Buy</th>
                        <th>Who Last Serviced</th>
                        <th>Partner</th>
                        <th>Site</th>
                        <th>Contact</th>
                        <th>Employee</th>
                        <th>Price</th>
                        <th>Created Date</th>
                        <th>Is Active</th>
                        <th>Comment1</th>
                        <th>Comment2</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var resource in Model.Resources)
                    {
                        <tr>
                            <td>@(resource.Name ?? "-")</td>
                            <td>@(resource.ResourceType?.Name ?? "-")</td>
                            <td>@(resource.ResourceStatus?.Name ?? "-")</td>
                            <td>@(resource.Serial ?? "-")</td>
                            <td>@(resource.NextService?.ToString("yyyy-MM-dd") ?? "-")</td>
                            <td>@(resource.DateOfPurchase?.ToString("yyyy-MM-dd") ?? "-")</td>
                            <td>@(resource.WarrantyPeriod?.ToString() ?? "-")</td>
                            <td>@(resource.WarrantyExpireDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                            <td>@(resource.ServiceDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                            <td>@(resource.WhoBuy?.UserName ?? "-")</td>
                            <td>@(resource.WhoLastServiced?.UserName ?? "-")</td>
                            <td>@(resource.Partner?.Name ?? "-")</td>
                            <td>@(resource.Site?.SiteName ?? "-")</td>
                            <td>@(resource.Contact?.FirstName ?? "-")</td>
                            <td>@(resource.Employee?.FirstName ?? "-")</td>
                            <td>@(resource.Price?.ToString("C") ?? "-")</td>
                            <td>@(resource.CreatedDate?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                            <td>@(resource.IsActive.HasValue ? (resource.IsActive.Value ? "Yes" : "No") : "-")</td>
                            <td>@(resource.Comment1 ?? "-")</td>
                            <td>@(resource.Comment2 ?? "-")</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editResourceModal_@resource.ResourceId">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <form asp-page-handler="Delete" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this resource?');">
                                    <input type="hidden" name="id" value="@resource.ResourceId" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Create Resource Modal -->
    <div class="modal fade" id="createResourceModal" tabindex="-1" aria-labelledby="createResourceModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createResourceModalLabel">Create New Resource</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-page-handler="Create" method="post">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Resource.Name" class="form-label">Name</label>
                                <input asp-for="Resource.Name" class="form-control" maxlength="100" data-val="true" data-val-maxlength="Name cannot exceed 100 characters" data-val-maxlength-max="100" />
                                <span asp-validation-for="Resource.Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Resource.ResourceTypeId" class="form-label">Resource Type</label>
                                <select asp-for="Resource.ResourceTypeId" class="form-control" asp-items="Model.ResourceTypeOptions">
                                    <option value="">Select Resource Type</option>
                                </select>
                                <span asp-validation-for="Resource.ResourceTypeId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Resource.ResourceStatusId" class="form-label">Resource Status</label>
                                <select asp-for="Resource.ResourceStatusId" class="form-control" asp-items="Model.ResourceStatusOptions">
                                    <option value="">Select Resource Status</option>
                                </select>
                                <span asp-validation-for="Resource.ResourceStatusId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Resource.Serial" class="form-label">Serial</label>
                                <input asp-for="Resource.Serial" class="form-control" maxlength="100" data-val="true" data-val-maxlength="Serial cannot exceed 100 characters" data-val-maxlength-max="100" />
                                <span asp-validation-for="Resource.Serial" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Resource.NextService" class="form-label">Next Service</label>
                                <input asp-for="Resource.NextService" type="date" class="form-control" />
                                <span asp-validation-for="Resource.NextService" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Resource.DateOfPurchase" class="form-label">Date of Purchase</label>
                                <input asp-for="Resource.DateOfPurchase" type="date" class="form-control" />
                                <span asp-validation-for="Resource.DateOfPurchase" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Resource.WarrantyPeriod" class="form-label">Warranty Period (months)</label>
                                <input asp-for="Resource.WarrantyPeriod" type="number" class="form-control" min="0" />
                                <span asp-validation-for="Resource.WarrantyPeriod" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Resource.WarrantyExpireDate" class="form-label">Warranty Expire Date</label>
                                <input asp-for="Resource.WarrantyExpireDate" type="date" class="form-control" />
                                <span asp-validation-for="Resource.WarrantyExpireDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Resource.ServiceDate" class="form-label">Service Date</label>
                                <input asp-for="Resource.ServiceDate" type="date" class="form-control" />
                                <span asp-validation-for="Resource.ServiceDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Resource.WhoBuyId" class="form-label">Who Buy</label>
                                <select asp-for="Resource.WhoBuyId" class="form-control" asp-items="Model.UserOptions">
                                    <option value="">Select User</option>
                                </select>
                                <span asp-validation-for="Resource.WhoBuyId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Resource.WhoLastServicedId" class="form-label">Who Last Serviced</label>
                                <select asp-for="Resource.WhoLastServicedId" class="form-control" asp-items="Model.UserOptions">
                                    <option value="">Select User</option>
                                </select>
                                <span asp-validation-for="Resource.WhoLastServicedId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Resource.PartnerId" class="form-label">Partner</label>
                                <select asp-for="Resource.PartnerId" class="form-control" asp-items="Model.PartnerOptions">
                                    <option value="">Select Partner</option>
                                </select>
                                <span asp-validation-for="Resource.PartnerId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Resource.SiteId" class="form-label">Site</label>
                                <select asp-for="Resource.SiteId" class="form-control" asp-items="Model.SiteOptions">
                                    <option value="">Select Site</option>
                                </select>
                                <span asp-validation-for="Resource.SiteId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Resource.ContactId" class="form-label">Contact</label>
                                <select asp-for="Resource.ContactId" class="form-control" asp-items="Model.ContactOptions">
                                    <option value="">Select Contact</option>
                                </select>
                                <span asp-validation-for="Resource.ContactId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Resource.EmployeeId" class="form-label">Employee</label>
                                <select asp-for="Resource.EmployeeId" class="form-control" asp-items="Model.EmployeeOptions">
                                    <option value="">Select Employee</option>
                                </select>
                                <span asp-validation-for="Resource.EmployeeId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Resource.Price" class="form-label">Price</label>
                                <input asp-for="Resource.Price" type="number" step="0.01" class="form-control" min="0" max="999999.99" />
                                <span asp-validation-for="Resource.Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Active</label>
                                <input type="checkbox" name="Resource.IsActive" class="form-check-input" @(Model.Resource?.IsActive ?? true ? "checked" : "") value="true" />
                                <input type="hidden" name="Resource.IsActive" value="false" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Resource.Comment1" class="form-label">Comment 1</label>
                                <textarea asp-for="Resource.Comment1" class="form-control"></textarea>
                                <span asp-validation-for="Resource.Comment1" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Resource.Comment2" class="form-label">Comment 2</label>
                                <textarea asp-for="Resource.Comment2" class="form-control"></textarea>
                                <span asp-validation-for="Resource.Comment2" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Resource Modals -->
    @foreach (var resource in Model.Resources)
    {
        <div class="modal fade" id="editResourceModal_@resource.ResourceId" tabindex="-1" aria-labelledby="editResourceModalLabel_@resource.ResourceId" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editResourceModalLabel_@resource.ResourceId">Edit Resource</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form asp-page-handler="Update" method="post">
                        <input type="hidden" asp-for="Resource.ResourceId" value="@resource.ResourceId" />
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Resource.Name" class="form-label">Name</label>
                                    <input asp-for="Resource.Name" class="form-control" value="@resource.Name" maxlength="100" data-val="true" data-val-maxlength="Name cannot exceed 100 characters" data-val-maxlength-max="100" />
                                    <span asp-validation-for="Resource.Name" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Resource.ResourceTypeId" class="form-label">Resource Type</label>
                                    <select asp-for="Resource.ResourceTypeId" class="form-control" asp-items="Model.ResourceTypeOptions">
                                        <option value="">Select Resource Type</option>
                                    </select>
                                    <span asp-validation-for="Resource.ResourceTypeId" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Resource.ResourceStatusId" class="form-label">Resource Status</label>
                                    <select asp-for="Resource.ResourceStatusId" class="form-control" asp-items="Model.ResourceStatusOptions">
                                        <option value="">Select Resource Status</option>
                                    </select>
                                    <span asp-validation-for="Resource.ResourceStatusId" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Resource.Serial" class="form-label">Serial</label>
                                    <input asp-for="Resource.Serial" class="form-control" value="@resource.Serial" maxlength="100" data-val="true" data-val-maxlength="Serial cannot exceed 100 characters" data-val-maxlength-max="100" />
                                    <span asp-validation-for="Resource.Serial" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Resource.NextService" class="form-label">Next Service</label>
                                    <input asp-for="Resource.NextService" type="date" class="form-control" value="@resource.NextService?.ToString("yyyy-MM-dd")" />
                                    <span asp-validation-for="Resource.NextService" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Resource.DateOfPurchase" class="form-label">Date of Purchase</label>
                                    <input asp-for="Resource.DateOfPurchase" type="date" class="form-control" value="@resource.DateOfPurchase?.ToString("yyyy-MM-dd")" />
                                    <span asp-validation-for="Resource.DateOfPurchase" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Resource.WarrantyPeriod" class="form-label">Warranty Period (months)</label>
                                    <input asp-for="Resource.WarrantyPeriod" type="number" class="form-control" value="@resource.WarrantyPeriod" min="0" />
                                    <span asp-validation-for="Resource.WarrantyPeriod" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Resource.WarrantyExpireDate" class="form-label">Warranty Expire Date</label>
                                    <input asp-for="Resource.WarrantyExpireDate" type="date" class="form-control" value="@resource.WarrantyExpireDate?.ToString("yyyy-MM-dd")" />
                                    <span asp-validation-for="Resource.WarrantyExpireDate" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Resource.ServiceDate" class="form-label">Service Date</label>
                                    <input asp-for="Resource.ServiceDate" type="date" class="form-control" value="@resource.ServiceDate?.ToString("yyyy-MM-dd")" />
                                    <span asp-validation-for="Resource.ServiceDate" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Resource.WhoBuyId" class="form-label">Who Buy</label>
                                    <select asp-for="Resource.WhoBuyId" class="form-control" asp-items="Model.UserOptions">
                                        <option value="">Select User</option>
                                    </select>
                                    <span asp-validation-for="Resource.WhoBuyId" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Resource.WhoLastServicedId" class="form-label">Who Last Serviced</label>
                                    <select asp-for="Resource.WhoLastServicedId" class="form-control" asp-items="Model.UserOptions">
                                        <option value="">Select User</option>
                                    </select>
                                    <span asp-validation-for="Resource.WhoLastServicedId" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Resource.PartnerId" class="form-label">Partner</label>
                                    <select asp-for="Resource.PartnerId" class="form-control" asp-items="Model.PartnerOptions">
                                        <option value="">Select Partner</option>
                                    </select>
                                    <span asp-validation-for="Resource.PartnerId" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Resource.SiteId" class="form-label">Site</label>
                                    <select asp-for="Resource.SiteId" class="form-control" asp-items="Model.SiteOptions">
                                        <option value="">Select Site</option>
                                    </select>
                                    <span asp-validation-for="Resource.SiteId" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Resource.ContactId" class="form-label">Contact</label>
                                    <select asp-for="Resource.ContactId" class="form-control" asp-items="Model.ContactOptions">
                                        <option value="">Select Contact</option>
                                    </select>
                                    <span asp-validation-for="Resource.ContactId" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Resource.EmployeeId" class="form-label">Employee</label>
                                    <select asp-for="Resource.EmployeeId" class="form-control" asp-items="Model.EmployeeOptions">
                                        <option value="">Select Employee</option>
                                    </select>
                                    <span asp-validation-for="Resource.EmployeeId" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Resource.Price" class="form-label">Price</label>
                                    <input asp-for="Resource.Price" type="number" step="0.01" class="form-control" value="@resource.Price" min="0" max="999999.99" />
                                    <span asp-validation-for="Resource.Price" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Active</label>
                                    <input type="checkbox" name="Resource.IsActive" class="form-check-input" @(resource.IsActive ?? false ? "checked" : "") value="true" />
                                    <input type="hidden" name="Resource.IsActive" value="false" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Resource.Comment1" class="form-label">Comment 1</label>
                                    <textarea asp-for="Resource.Comment1" class="form-control">@resource.Comment1</textarea>
                                    <span asp-validation-for="Resource.Comment1" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Resource.Comment2" class="form-label">Comment 2</label>
                                    <textarea asp-for="Resource.Comment2" class="form-control">@resource.Comment2</textarea>
                                    <span asp-validation-for="Resource.Comment2" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}