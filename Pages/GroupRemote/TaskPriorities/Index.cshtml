@page
@model Cloud9_2.Pages.GroupRemote.TaskPrioritiesModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Task Priorities";
}

@await Html.PartialAsync("_GroupRemoteSidebar")

<!-- Main Content -->
<div class="right-content">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Page Header -->
    <div class="page-header-fixed-top">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-body-tertiary rounded-3 p-2 mb-0">
                    <li class="breadcrumb-item"><a href="../../../">FÅ‘oldal</a></li>
                    <li class="breadcrumb-item"><a href="../">Group Remote</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Task Priorities</li>
                </ol>
            </nav>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createTaskPriorityModal">
                <i class="bi bi-plus-circle me-1"></i> New Task Priority
            </button>
        </div>
    </div>

    <!-- Task Priorities Table -->
    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Display Order</th>
                        <th>Color Code</th>
                        <th>Icon</th>
                        <th>Is Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var taskPriority in Model.TaskPriorities)
                    {
                        <tr>
                            <td>@taskPriority.Name</td>
                            <td>@(taskPriority.Description ?? "-")</td>
                            <td>@(taskPriority.DisplayOrder?.ToString() ?? "-")</td>
                            <td>
                                @if (taskPriority.ColorCode != null)
                                {
                                    <span class="badge" style="background-color: @taskPriority.ColorCode">@taskPriority.ColorCode</span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td>@(taskPriority.Icon ?? "-")</td>
                            <td>@(taskPriority.IsActive.HasValue ? (taskPriority.IsActive.Value ? "Yes" : "No") : "-")</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editTaskPriorityModal_@taskPriority.TaskPriorityPMId">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <form asp-page-handler="Delete" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this task priority?');">
                                    <input type="hidden" name="id" value="@taskPriority.TaskPriorityPMId" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Create Task Priority Modal -->
    <div class="modal fade" id="createTaskPriorityModal" tabindex="-1" aria-labelledby="createTaskPriorityModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createTaskPriorityModalLabel">Create New Task Priority</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-page-handler="Create" method="post">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label asp-for="TaskPriority.Name" class="form-label">Name</label>
                            <input asp-for="TaskPriority.Name" class="form-control" required maxlength="50" data-val="true" data-val-required="The Name field is required." data-val-maxlength="The Name field must not exceed 50 characters." data-val-maxlength-max="50" />
                            <span asp-validation-for="TaskPriority.Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TaskPriority.Description" class="form-label">Description</label>
                            <textarea asp-for="TaskPriority.Description" class="form-control" maxlength="255" data-val="true" data-val-maxlength="The Description field must not exceed 255 characters." data-val-maxlength-max="255"></textarea>
                            <span asp-validation-for="TaskPriority.Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TaskPriority.DisplayOrder" class="form-label">Display Order</label>
                            <input asp-for="TaskPriority.DisplayOrder" type="number" class="form-control" min="0" />
                            <span asp-validation-for="TaskPriority.DisplayOrder" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TaskPriority.ColorCode" class="form-label">Color Code</label>
                            <input asp-for="TaskPriority.ColorCode" type="text" class="form-control" maxlength="20" placeholder="#FFFFFF" data-val="true" data-val-maxlength="The Color Code field must not exceed 20 characters." data-val-maxlength-max="20" />
                            <span asp-validation-for="TaskPriority.ColorCode" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TaskPriority.Icon" class="form-label">Icon</label>
                            <input asp-for="TaskPriority.Icon" type="text" class="form-control" maxlength="50" data-val="true" data-val-maxlength="The Icon field must not exceed 50 characters." data-val-maxlength-max="50" />
                            <span asp-validation-for="TaskPriority.Icon" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Active</label>
                            <input type="checkbox" name="TaskPriority.IsActive" class="form-check-input" @(Model.TaskPriority?.IsActive ?? true ? "checked" : "") value="true" />
                            <input type="hidden" name="TaskPriority.IsActive" value="false" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Task Priority Modals -->
    @foreach (var taskPriority in Model.TaskPriorities)
    {
        <div class="modal fade" id="editTaskPriorityModal_@taskPriority.TaskPriorityPMId" tabindex="-1" aria-labelledby="editTaskPriorityModalLabel_@taskPriority.TaskPriorityPMId" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editTaskPriorityModalLabel_@taskPriority.TaskPriorityPMId">Edit Task Priority</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form asp-page-handler="Update" method="post">
                        <input type="hidden" asp-for="TaskPriority.TaskPriorityPMId" value="@taskPriority.TaskPriorityPMId" />
                        <div class="modal-body">
                            <div class="mb-3">
                                <label asp-for="TaskPriority.Name" class="form-label">Name</label>
                                <input asp-for="TaskPriority.Name" class="form-control" value="@taskPriority.Name" required maxlength="50" data-val="true" data-val-required="The Name field is required." data-val-maxlength="The Name field must not exceed 50 characters." data-val-maxlength-max="50" />
                                <span asp-validation-for="TaskPriority.Name" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="TaskPriority.Description" class="form-label">Description</label>
                                <textarea asp-for="TaskPriority.Description" class="form-control" maxlength="255" data-val="true" data-val-maxlength="The Description field must not exceed 255 characters." data-val-maxlength-max="255">@taskPriority.Description</textarea>
                                <span asp-validation-for="TaskPriority.Description" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="TaskPriority.DisplayOrder" class="form-label">Display Order</label>
                                <input asp-for="TaskPriority.DisplayOrder" type="number" class="form-control" value="@taskPriority.DisplayOrder" min="0" />
                                <span asp-validation-for="TaskPriority.DisplayOrder" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="TaskPriority.ColorCode" class="form-label">Color Code</label>
                                <input asp-for="TaskPriority.ColorCode" type="text" class="form-control" value="@taskPriority.ColorCode" maxlength="20" placeholder="#FFFFFF" data-val="true" data-val-maxlength="The Color Code field must not exceed 20 characters." data-val-maxlength-max="20" />
                                <span asp-validation-for="TaskPriority.ColorCode" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="TaskPriority.Icon" class="form-label">Icon</label>
                                <input asp-for="TaskPriority.Icon" type="text" class="form-control" value="@taskPriority.Icon" maxlength="50" data-val="true" data-val-maxlength="The Icon field must not exceed 50 characters." data-val-maxlength-max="50" />
                                <span asp-validation-for="TaskPriority.Icon" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Active</label>
                                <input type="checkbox" name="TaskPriority.IsActive" class="form-check-input" @(taskPriority.IsActive ?? false ? "checked" : "") value="true" />
                                <input type="hidden" name="TaskPriority.IsActive" value="false" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}