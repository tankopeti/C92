@page
@model Cloud9_2.Pages.GroupRemote.TaskStatusesModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Task Statuses";
}

@await Html.PartialAsync("_GroupRemoteSidebar")

<!-- Main Content -->
<div class="right-content">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Page Header -->
    <div class="page-header-fixed-top">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-body-tertiary rounded-3 p-2 mb-0">
                    <li class="breadcrumb-item"><a href="../../../">FÅ‘oldal</a></li>
                    <li class="breadcrumb-item"><a href="../">Group Remote</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Task Statuses</li>
                </ol>
            </nav>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createTaskStatusModal">
                <i class="bi bi-plus-circle me-1"></i> New Task Status
            </button>
        </div>
    </div>

    <!-- Task Statuses Table -->
    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Display Order</th>
                        <th>Color Code</th>
                        <th>Is Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var taskStatus in Model.TaskStatuses)
                    {
                        <tr>
                            <td>@taskStatus.Name</td>
                            <td>@(taskStatus.Description ?? "-")</td>
                            <td>@(taskStatus.DisplayOrder?.ToString() ?? "-")</td>
                            <td>
                                @if (taskStatus.ColorCode != null)
                                {
                                    <span class="badge" style="background-color: @taskStatus.ColorCode">@taskStatus.ColorCode</span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td>@(taskStatus.IsActive.HasValue ? (taskStatus.IsActive.Value ? "Yes" : "No") : "-")</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editTaskStatusModal_@taskStatus.TaskStatusPMId">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <form asp-page-handler="Delete" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this task status?');">
                                    <input type="hidden" name="id" value="@taskStatus.TaskStatusPMId" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Create Task Status Modal -->
    <div class="modal fade" id="createTaskStatusModal" tabindex="-1" aria-labelledby="createTaskStatusModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createTaskStatusModalLabel">Create New Task Status</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-page-handler="Create" method="post">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label asp-for="TaskStatus.Name" class="form-label">Name</label>
                            <input asp-for="TaskStatus.Name" class="form-control" required maxlength="50" />
                            <span asp-validation-for="TaskStatus.Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TaskStatus.Description" class="form-label">Description</label>
                            <textarea asp-for="TaskStatus.Description" class="form-control" maxlength="255"></textarea>
                            <span asp-validation-for="TaskStatus.Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TaskStatus.DisplayOrder" class="form-label">Display Order</label>
                            <input asp-for="TaskStatus.DisplayOrder" type="number" class="form-control" min="0" />
                            <span asp-validation-for="TaskStatus.DisplayOrder" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TaskStatus.ColorCode" class="form-label">Color Code</label>
                            <input asp-for="TaskStatus.ColorCode" type="text" class="form-control" placeholder="#FFFFFF" />
                            <span asp-validation-for="TaskStatus.ColorCode" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Active</label>
                            <input type="checkbox" name="TaskStatus.IsActive" class="form-check-input" @(Model.TaskStatus?.IsActive ?? true ? "checked" : "") value="true" />
                            <input type="hidden" name="TaskStatus.IsActive" value="false" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Task Status Modals (One per TaskStatus) -->
    @foreach (var taskStatus in Model.TaskStatuses)
    {
        <div class="modal fade" id="editTaskStatusModal_@taskStatus.TaskStatusPMId" tabindex="-1" aria-labelledby="editTaskStatusModalLabel_@taskStatus.TaskStatusPMId" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editTaskStatusModalLabel_@taskStatus.TaskStatusPMId">Edit Task Status</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form asp-page-handler="Update" method="post">
                        <input type="hidden" asp-for="TaskStatus.TaskStatusPMId" value="@taskStatus.TaskStatusPMId" />
                        <div class="modal-body">
                            <div class="mb-3">
                                <label asp-for="TaskStatus.Name" class="form-label">Name</label>
                                <input asp-for="TaskStatus.Name" class="form-control" value="@taskStatus.Name" required maxlength="50" />
                                <span asp-validation-for="TaskStatus.Name" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="TaskStatus.Description" class="form-label">Description</label>
                                <textarea asp-for="TaskStatus.Description" class="form-control" maxlength="255">@taskStatus.Description</textarea>
                                <span asp-validation-for="TaskStatus.Description" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="TaskStatus.DisplayOrder" class="form-label">Display Order</label>
                                <input asp-for="TaskStatus.DisplayOrder" type="number" class="form-control" value="@taskStatus.DisplayOrder" min="0" />
                                <span asp-validation-for="TaskStatus.DisplayOrder" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="TaskStatus.ColorCode" class="form-label">Color Code</label>
                                <input asp-for="TaskStatus.ColorCode" type="text" class="form-control" value="@taskStatus.ColorCode" placeholder="#FFFFFF" />
                                <span asp-validation-for="TaskStatus.ColorCode" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Active</label>
                                <input type="checkbox" name="TaskStatus.IsActive" class="form-check-input" @(taskStatus.IsActive ?? false ? "checked" : "") value="true" />
                                <input type="hidden" name="TaskStatus.IsActive" value="false" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}