@page
@model Cloud9_2.Pages.Tasks.TaskTypesModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Task Types";
}

@await Html.PartialAsync("_GroupRemoteSidebar")

<!-- Main Content -->
<div class="right-content">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Page Header -->
    <div class="page-header-fixed-top">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-body-tertiary rounded-3 p-2 mb-0">
                    <li class="breadcrumb-item"><a href="../../">FÅ‘oldal</a></li>
                    <li class="breadcrumb-item"><a href="../">Tasks</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Task Types</li>
                </ol>
            </nav>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createTaskTypeModal">
                <i class="bi bi-plus-circle me-1"></i> New Task Type
            </button>
        </div>
    </div>

    <!-- Task Types Table -->
    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Icon</th>
                        <th>Is Active</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var taskType in Model.TaskTypes)
                    {
                        <tr>
                            <td>@taskType.TaskTypePMName</td>
                            <td>@taskType.Description</td>
                            <td>@taskType.Icon</td>
                            <td>@(taskType.IsActive ? "Yes" : "No")</td>
                            <td>@taskType.CreatedAt?.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editTaskTypeModal_@taskType.TaskTypePMId">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <form asp-page-handler="Delete" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this task type?');">
                                    <input type="hidden" name="id" value="@taskType.TaskTypePMId" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Create Task Type Modal -->
    <div class="modal fade" id="createTaskTypeModal" tabindex="-1" aria-labelledby="createTaskTypeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createTaskTypeModalLabel">Create New Task Type</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-page-handler="Create" method="post">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label asp-for="TaskType.TaskTypePMName" class="form-label">Name</label>
                            <input asp-for="TaskType.TaskTypePMName" class="form-control" required />
                            <span asp-validation-for="TaskType.TaskTypePMName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TaskType.Description" class="form-label">Description</label>
                            <textarea asp-for="TaskType.Description" class="form-control"></textarea>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TaskType.Icon" class="form-label">Icon</label>
                            <input asp-for="TaskType.Icon" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="TaskType.IsActive" class="form-label">Active</label>
                            <input asp-for="TaskType.IsActive" type="checkbox" class="form-check-input" checked />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Task Type Modals (One per TaskType) -->
    @foreach (var taskType in Model.TaskTypes)
    {
        <div class="modal fade" id="editTaskTypeModal_@taskType.TaskTypePMId" tabindex="-1" aria-labelledby="editTaskTypeModalLabel_@taskType.TaskTypePMId" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editTaskTypeModalLabel_@taskType.TaskTypePMId">Edit Task Type</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form asp-page-handler="Update" method="post">
                        <input type="hidden" asp-for="TaskType.TaskTypePMId" value="@taskType.TaskTypePMId" />
                        <div class="modal-body">
                            <div class="mb-3">
                                <label asp-for="TaskType.TaskTypePMName" class="form-label">Name</label>
                                <input asp-for="TaskType.TaskTypePMName" class="form-control" value="@taskType.TaskTypePMName" required />
                                <span asp-validation-for="TaskType.TaskTypePMName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="TaskType.Description" class="form-label">Description</label>
                                <textarea asp-for="TaskType.Description" class="form-control">@taskType.Description</textarea>
                            </div>
                            <div class="mb-3">
                                <label asp-for="TaskType.Icon" class="form-label">Icon</label>
                                <input asp-for="TaskType.Icon" class="form-control" value="@taskType.Icon" />
                            </div>
                            <div class="mb-3">
                                <label asp-for="TaskType.IsActive" class="form-label">Active</label>
                                <input asp-for="TaskType.IsActive" type="checkbox" class="form-check-input" checked="@taskType.IsActive" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}