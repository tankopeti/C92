                    <a class="nav-link px-3 py-2 @(Html.IsActive("ResourceStatuses/Index", "GroupRemote") ? "active" : "")" asp-area="" asp-page="/GroupRemote/ResourceStatuses/Index">
                        <i class="bi bi-people-fill me-2"></i>Eszköz Státuszok
