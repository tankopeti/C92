                    ProductId: parseInt(productId),
                    Quantity: parseInt($(`#newQuantity_${quoteId}`).val()) || 0,
                    UnitPrice: parseFloat($(`#newUnitPrice_${quoteId}`).val().replace(',', '.')) || 0,
