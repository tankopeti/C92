<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cloud9.2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <main role="main" class="d-flex flex-column min-vh-100">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            Â© 2025 - Cloud9.2 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <style>
        /* Ensure full height for login page */
        body {
            padding-top: 0;
            background-color: #f8f9fa;
        }

        /* Night mode styles for login page */
        [data-theme="dark"] {
            background-color: #1a1a1a;
            color: #e0e0e0;
        }

        [data-theme="dark"] body {
            background-color: #1a1a1a;
        }

        [data-theme="dark"] .footer {
            background-color: #2a2a2a;
            border-top: 1px solid #444;
            color: #888;
        }

        [data-theme="dark"] .footer a {
            color: #4a90e2;
        }
    </style>
</body>
</html>